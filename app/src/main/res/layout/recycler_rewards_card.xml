<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewRecyclerRewardsRewardsCard"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutRecycleRewardsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_card">

        <TextView
            android:id="@+id/textViewRecyclerRewardsPurpleCoin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/purple_coin"
            android:gravity="center"
            android:text="99999"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryLight" />

        <TextView
            android:id="@+id/textViewRecyclerRewardsPointsText"
            app:layout_constraintStart_toEndOf="@id/textViewRecyclerRewardsPurpleCoin"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/soleil_bold"
            android:text="Pts"
            android:textColor="@color/colorPrimary"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/textViewRecyclerRewardsCardText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewRecyclerRewardsPurpleCoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="10dp"
            android:text="@string/placeholder"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

