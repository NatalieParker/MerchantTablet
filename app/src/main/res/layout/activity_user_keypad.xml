<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.UserKeypadActivity">

    <ImageView
        android:id="@+id/imageUserKeypadBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/image_bkg"
        android:scaleType="center"
        android:src="@drawable/user_keypad_bkg" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineUserKeypadContainerSplit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.60"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    Left container-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutUserKeypadLeftContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineUserKeypadContainerSplit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollViewUserKeypadCards"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textViewUserKeypadRewards"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    android:text="Get sweet rewards and free gift cards."
                    android:textColor="@color/white"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewUserKeypadCards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="20dp"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/textViewUserKeypadRewards"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    Right container-->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="30dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineUserKeypadContainerSplit"
        app:layout_constraintTop_toTopOf="parent">

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/layoutUserKeypadContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:blurOverlayColor="#40E3E3F4">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutUserKeypadRightContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccpUserKeypadPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:visibility="gone"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_countryPreference="US,KR"
                    app:layout_constraintBottom_toTopOf="@id/constraintLayoutUserKeypadKeypadButtons"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imageUserKeypadLogo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toTopOf="@id/editTextUserKeypadInput"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/logo_white" />

                <EditText
                    android:id="@+id/editTextUserKeypadInput"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="@string/phone_input_hint"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="23sp"
                    android:maxLength="16"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayoutUserKeypadKeypadButtons"
                    app:layout_constraintTop_toBottomOf="@id/imageUserKeypadLogo" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineUserKeypadKeys"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintGuide_percent="0.33"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutUserKeypadKeypadButtons"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/colorPrimaryLight"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/guidelineUserKeypadKeys">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="20dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:id="@+id/linearLayoutUserKeypadKeyRow1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="1"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="2"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="3"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutUserKeypadKeyRow2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="4"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="5"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="6"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutUserKeypadKeyRow3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey7"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="7"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey8"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="8"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey9"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="9"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutUserKeypadKeyRow4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey0"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="0"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/deleteButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.1"
                                android:backgroundTint="@color/white"
                                app:icon="@drawable/ic_delete"
                                app:iconGravity="textStart"
                                app:iconPadding="10dp"
                                app:iconSize="40dp"
                                app:iconTint="@color/colorGray" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/enterButton"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/soleil_bold"
                            android:text="Submit"
                            android:textSize="20sp" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </eightbitlab.com.blurview.BlurView>

    </androidx.cardview.widget.CardView>

    <!-- Give points response-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutUserKeypadPointSuccessScreen"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:background="@drawable/bg_rounded_corners_white"
        android:elevation="1dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineUserKeypadContainerSplit">

        <ImageView
            android:id="@+id/imageUserKeypadLogout"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logout_v2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textUserKeypadPtsResponseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/soleil_bold"
            android:text="Hello"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewUserKeypadProfilePicture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ribbon_medal_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textUserKeypadPtsResponseName" />

        <TextView
            android:id="@+id/textUserKeypadPtResponseHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/soleil_bold"
            android:gravity="center"
            android:text="99999 points"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewUserKeypadProfilePicture" />

        <TextView
            android:id="@+id/textUserKeypadPtsResponseDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:text="You just got 5 points from Go Get Yogurt and now have 45 points for rewards."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textUserKeypadPtResponseHeader" />

        <TextView
            android:id="@+id/textUserKeypadPtsResponseMoreInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="110dp"
            android:text="You also have $5.00 available for gift cards you can redeem in the Jayu app."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@id/buttonUserKeypadBackButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textUserKeypadPtsResponseDesc" />

        <ImageView
            android:id="@+id/imageViewUserKeypadQRCode"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/qr_code"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="87dp"
            app:layout_constraintTop_toBottomOf="@id/textUserKeypadPtsResponseMoreInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonUserKeypadBackButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="25dp"
            android:text="@string/ok"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    Options menu-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonUserKeypadOptionsMenu"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        app:icon="@drawable/ic_menu"
        app:iconSize="35dp"
        app:iconTint="@color/white"
        app:iconGravity="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textUserKeypadCompany"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/company"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/soleil_book"
        app:layout_constraintStart_toEndOf="@id/buttonUserKeypadOptionsMenu"
        app:layout_constraintEnd_toEndOf="@+id/guidelineUserKeypadContainerSplit"
        app:layout_constraintTop_toTopOf="@id/buttonUserKeypadOptionsMenu"
        app:layout_constraintBottom_toBottomOf="@id/buttonUserKeypadOptionsMenu"/>

    <LinearLayout
        android:id="@+id/linearLayoutUserKeypadOptionsMenu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_rounded_corners_white"
        android:elevation="3dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonUserKeypadLockScreen"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/soleil_bold"
            android:text="@string/lock_screen"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorGray"
            app:icon="@drawable/ic_lock"
            app:iconPadding="15dp"
            app:iconTint="@color/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonUserKeypadUpdatePoints"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/soleil_bold"
            android:text="@string/update_points"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorGray"
            app:icon="@drawable/ic_edit_2"
            app:iconPadding="15dp"
            app:iconTint="@color/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonUserKeypadSwitchToEmployeeAccount"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/soleil_bold"
            android:text="@string/team_member"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorGray"
            app:icon="@drawable/ic_users"
            app:iconPadding="15dp"
            app:iconTint="@color/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonUserKeypadOptionsPortal"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/soleil_bold"
            android:text="@string/web_portal"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorGray"
            app:icon="@drawable/ic_external_link"
            app:iconPadding="15dp"
            app:iconTint="@color/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonUserKeypadSignOut"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/soleil_bold"
            android:text="@string/log_out"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorGray"
            app:icon="@drawable/ic_log_out"
            app:iconPadding="15dp"
            app:iconTint="@color/colorPrimary" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutUserKeypadDarkenScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:elevation="2dp"
        android:visibility="gone" />

    <include
        android:id="@+id/spinnerUserKeypad"
        layout="@layout/view_spinner_default" />

</androidx.constraintlayout.widget.ConstraintLayout>