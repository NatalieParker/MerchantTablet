<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.UserKeypadActivity">

    <ImageView
        android:id="@+id/imageUserKeypadBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/image_bkg"
        android:scaleType="center"
        android:src="@drawable/user_keypad_bkg" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineUserKeypadContainerSplit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.60"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    Left container-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutUserKeypadLeftContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineUserKeypadContainerSplit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="90dp"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayoutShopActivityImageSlider"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="3dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tabBackground="@drawable/indicator_selector_wht"
                app:tabIndicatorHeight="0dp" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerUserKeypadViewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    Right container-->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineUserKeypadContainerSplit">

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/layoutUserKeypadContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:blurOverlayColor="#40E3E3F4">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutUserKeypadRightContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccpUserKeypadPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_countryPreference="US,KR"
                    app:layout_constraintBottom_toTopOf="@id/constraintLayoutUserKeypadKeypadButtons"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imageUserKeypadLogo"
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="@string/logo"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toTopOf="@id/editTextUserKeypadInput"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_weight="4"
                    app:srcCompat="@drawable/logo_white" />

                <EditText
                    android:id="@+id/editTextUserKeypadInput"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:autofillHints="@string/phone_input_hint"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="@string/phone_input_hint"
                    android:inputType="text|textMultiLine"
                    android:maxLength="16"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="23sp"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayoutUserKeypadKeypadButtons"
                    app:layout_constraintTop_toBottomOf="@id/imageUserKeypadLogo"
                    app:layout_constraintVertical_weight="10" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineUserKeypadKeys"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintGuide_percent="0.33"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutUserKeypadKeypadButtons"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/colorPrimaryLight"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/guidelineUserKeypadKeys">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="20dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="NestedWeights, HardcodedText">

                        <LinearLayout
                            android:id="@+id/linearLayoutUserKeypadKeyRow1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="1"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="2"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="3"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutUserKeypadKeyRow2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="4"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="5"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="6"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutUserKeypadKeyRow3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey7"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="7"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey8"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="8"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey9"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="9"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutUserKeypadKeyRow4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey0"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="0"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/deleteButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.1"
                                android:backgroundTint="@color/white"
                                app:icon="@drawable/ic_delete"
                                app:iconGravity="textStart"
                                app:iconPadding="10dp"
                                app:iconSize="40dp"
                                app:iconTint="@color/colorGray" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/enterButton"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorPrimary"
                            android:text="@string/submit"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </eightbitlab.com.blurview.BlurView>
    </androidx.cardview.widget.CardView>

    <!-- Give points response-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutUserKeypadPointSuccessScreen"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineUserKeypadContainerSplit">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/imageUserKeypadPtsResponseExit"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:icon="@drawable/close_icon_x"
            app:iconSize="25dp"
            app:iconTint="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layoutUserKeypadPtsResponseHeaderTopContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textUKPtsResponseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/imageUKPtsResponseProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/profile_image"
                android:scaleType="fitCenter"
                android:src="@drawable/default_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/you_have_earned"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageUserKeypadPtsResponseRibbon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/ribbon"
            android:scaleType="fitCenter"
            android:src="@drawable/ribbon_medal_img"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/layoutUserKeypadPointsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutUserKeypadPtsResponseHeaderTopContainer">

            <ImageView
                android:id="@+id/imagePtsResponseLeftConfetti"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/confetti"
                android:scaleType="fitCenter"
                android:src="@drawable/confetti_left" />

            <View
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="110dp"
                android:layout_height="140dp">

                <ImageView
                    android:id="@+id/imageUKPointsIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/points_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textUKPtsResponsePoints"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/urbanist_black"
                    android:gravity="center"
                    android:lines="1"
                    android:padding="25dp"
                    android:text="@string/_99999"
                    app:autoSizeMinTextSize="10sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/urbanist_black"
                    android:gravity="center"
                    android:text="@string/points"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageUKPointsIcon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textUserKeypadPtResponseHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_99999_points"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/imagePtsResponseRightConfetti"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/confetti"
                android:scaleType="fitCenter"
                android:src="@drawable/confetti_right" />
        </LinearLayout>

        <TextView
            android:id="@+id/textUserKeypadPtsResponseDesc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:text="from your visit to"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/layoutUserKeypadPointsHeader" />

        <TextView
            android:id="@+id/textUserKeypadPtsResponseDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/urbanist_black"
            android:text="@string/company"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="23sp"
            app:layout_constraintTop_toBottomOf="@+id/textUserKeypadPtsResponseDesc1" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutUKPtsResponseAppUserContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textUserKeypadPtsResponseDesc">

            <androidx.cardview.widget.CardView
                android:id="@+id/layoutUKPtsResponsePointsAvailable"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#F9F7F2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="You have 532 for rewards"
                    android:textAllCaps="true"
                    android:textColor="#896404"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonUserKeypadBackButton"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:text="@string/ok"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutUKPtsResponsePointsAvailable" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutUKPtsResponseBottomBar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonUserKeypadBackButton"
                app:layout_constraintVertical_bias="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Check us out!"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_white"
                    app:layout_constraintEnd_toEndOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="-20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/layoutUKPtsResponseBottomBar">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/qr_frame" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:src="@drawable/qr_code" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutUKPtsResponseAnonBottomContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textUserKeypadPtsResponseDesc">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutUKPtsResponseAnonBottomHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="80dp"
                android:background="@drawable/gradient_horizontal_purple">

                <ImageView
                    android:id="@+id/imageUKPtsResponseAnonLogo"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_white_600x600"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imageUKPtsResponseAnonQRCode"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/imageUKPtsResponseAnonQRCode"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-20dp"
                    app:layout_constraintEnd_toEndOf="parent"
