<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.UserKeypadActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/image_bkg"
        android:scaleType="center"
        android:src="@drawable/user_keypad_bkg" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineUKContainerSplit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.60"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    Left container-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineUKContainerSplit"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonUKOptionsMenu"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            app:icon="@drawable/ic_menu"
            app:iconGravity="textStart"
            app:iconSize="35dp"
            app:iconTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layoutUKCompany"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/buttonUKOptionsMenu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/buttonUKOptionsMenu"
            app:layout_constraintTop_toTopOf="@id/buttonUKOptionsMenu">

            <TextView
                android:id="@+id/textUKCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/urbanist_semi_bold"
                android:text="@string/company"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/layoutUserKeypadTeamName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:alpha="0.7"
                    android:contentDescription="@string/icon"
                    android:src="@drawable/ic_user" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/textUKTeamMemberName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:alpha="0.7"
                    android:fontFamily="@font/urbanist_medium"
                    android:gravity="center"
                    android:text="@string/team_member"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutUKCompany">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerUK"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="ltr"
                android:orientation="horizontal" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayoutShopActivityImageSlider"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/transparent"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/viewPagerUK"
                app:layout_constraintEnd_toEndOf="@id/viewPagerUK"
                app:layout_constraintStart_toStartOf="@id/viewPagerUK"
                app:tabBackground="@drawable/indicator_selector_wht"
                app:tabIndicatorHeight="0dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    Right container-->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineUKContainerSplit">

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/layoutUserKeypadContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:blurOverlayColor="#40E3E3F4">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutUserKeypadRightContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccpUserKeypadPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_countryPreference="US,KR"
                    app:layout_constraintBottom_toTopOf="@id/constraintLayoutUserKeypadKeypadButtons"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imageUserKeypadLogo"
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="@string/logo"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toTopOf="@id/editTextUserKeypadInput"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_weight="4"
                    app:srcCompat="@drawable/logo_white" />

                <EditText
                    android:id="@+id/editTextUserKeypadInput"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:autofillHints="@string/phone_input_hint"
                    android:backgroundTint="@android:color/transparent"
                    android:fontFamily="@font/urbanist_semi_bold"
                    android:hint="@string/phone_input_hint"
                    android:inputType="text|textMultiLine"
                    android:maxLength="16"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="23sp"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayoutUserKeypadKeypadButtons"
                    app:layout_constraintTop_toBottomOf="@id/imageUserKeypadLogo"
                    app:layout_constraintVertical_weight="10" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineUserKeypadKeys"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintGuide_percent="0.33"
                    app:layout_constraintStart_toStartOf="parent" />

<!--                TODO: Move to a recycler view-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutUserKeypadKeypadButtons"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/colorPrimaryLight"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/guidelineUserKeypadKeys">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="20dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="NestedWeights, HardcodedText">

                        <LinearLayout
                            android:id="@+id/linearLayoutUserKeypadKeyRow1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="1"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="2"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="3"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutUserKeypadKeyRow2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="4"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="5"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="6"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutUserKeypadKeyRow3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey7"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="7"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey8"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="8"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey9"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="9"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutUserKeypadKeyRow4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey0"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="0"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/deleteButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.1"
                                android:backgroundTint="@color/white"
                                app:icon="@drawable/ic_delete"
                                app:iconGravity="textStart"
                                app:iconPadding="10dp"
                                app:iconSize="40dp"
                                app:iconTint="@color/colorGray" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonUKSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorPrimary"
                            android:text="@string/submit"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </eightbitlab.com.blurview.BlurView>
    </androidx.cardview.widget.CardView>

    <!-- Give points response-->
<!--    TODO: Move to a fragment and then display-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutUKPtsResponse"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:background="@android:color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineUKContainerSplit">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/imageUKPtsResponseExit"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:icon="@drawable/close_icon_x"
            app:iconSize="25dp"
            app:iconTint="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layoutUKPtsResponseHeaderTopContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/viewUKPtsResponseTopSpacer"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/textUKPtsResponseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <ImageView
                android:id="@+id/imageUKPtsResponseProfile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/profile_image"
                android:scaleType="fitCenter"
                android:src="@drawable/default_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/you_have_earned"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutUserKeypadPointsHeader"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutUKPtsResponseHeaderTopContainer">

            <ImageView
                android:id="@+id/imagePtsResponseLeftConfetti"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:contentDescription="@string/confetti"
                android:scaleType="fitCenter"
                android:src="@drawable/confetti_left" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutUKPtsResponsePointIconContainer"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageUKPointsIcon"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/point_icon"
                    android:scaleType="fitCenter"
                    android:src="@drawable/points_icon"
                    app:layout_constraintBottom_toTopOf="@id/textUKPtsResponsePointsText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent=".8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textUKPtsResponsePoints"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="30dp"
                    android:fontFamily="@font/urbanist_black"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/_99999"
                    app:autoSizeMinTextSize="10sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="@id/imageUKPointsIcon"
                    app:layout_constraintEnd_toEndOf="@id/imageUKPointsIcon"
                    app:layout_constraintStart_toStartOf="@id/imageUKPointsIcon"
                    app:layout_constraintTop_toTopOf="@id/imageUKPointsIcon" />

                <TextView
                    android:id="@+id/textUKPtsResponsePointsText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/urbanist_black"
                    android:gravity="center"
                    android:text="@string/points"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageUKPointsIcon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/imagePtsResponseRightConfetti"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:contentDescription="@string/confetti"
                android:scaleType="fitCenter"
                android:src="@drawable/confetti_right" />
        </LinearLayout>

        <TextView
            android:id="@+id/textUKPtsResponseDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:text="@string/from_your_visit_to"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/layoutUserKeypadPointsHeader" />

        <TextView
            android:id="@+id/textUKPtsResponseCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/urbanist_black"
            android:text="@string/company"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="23sp"
            app:layout_constraintTop_toBottomOf="@+id/textUKPtsResponseDesc" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutUKPtsResponseAppUserContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textUKPtsResponseCompany"
            app:layout_constraintVertical_bias="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/layoutUKPtsResponsePointsAvailable"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:cardBackgroundColor="#F9F7F2"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".70">

                <TextView
                    android:id="@+id/textUKPtsResponseDesc2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="@string/you_have_99999_for_rewards"
                    android:textAllCaps="true"
                    android:textColor="#896404"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="18sp"
                    app:autoSizeTextType="uniform" />
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonUserKeypadBackButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:text="@string/ok"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".26"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutUKPtsResponsePointsAvailable"
                app:layout_constraintWidth_percent=".70" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutUKPtsResponseBottomBar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/gradient_horizontal_purple"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent=".30"
                app:layout_constraintTop_toBottomOf="@id/buttonUserKeypadBackButton"
                app:layout_constraintVertical_bias="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/check_us_out"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintStart_toStartOf="parent"
