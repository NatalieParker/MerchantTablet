<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.UserKeypadActivity">

    <ImageView
        android:id="@+id/imageUserKeypadBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/image_bkg"
        android:scaleType="center"
        android:src="@drawable/user_keypad_bkg" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineUserKeypadContainerSplit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.60"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    Left container-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutUserKeypadLeftContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineUserKeypadContainerSplit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewUserKeypadRewards"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:text="Rewards"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/white"
            app:autoSizeTextType="uniform"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonUserKeypadOptionsMenu"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewUserKeypadRewardsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="60dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/textViewUserKeypadRewards"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_card">

                    <TextView
                        android:id="@+id/imageViewUserKeypadPurpleCoin"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="25dp"
                        android:text="99999"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryLight"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="@drawable/purple_coin"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="10dp"
                        android:text="Pts"
                        android:textSize="24dp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/soleil_bold"
                        android:autoSizeTextType="uniform"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imageViewUserKeypadPurpleCoin"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/placeholder"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageViewUserKeypadPurpleCoin"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewUserKeypadSpecials"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:autoSizeTextType="uniform"
            android:text="Specials"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/cardViewUserKeypadSpecialsCard"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewUserKeypadSpecialsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="70dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/purple_card">

                    <TextView
                        android:id="@+id/imageViewUserKeypadWhiteCoin"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:text="99999"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:background="@drawable/white_coin"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="10dp"
                        android:text="Pts"
                        android:textSize="24dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:fontFamily="@font/soleil_bold"
                        android:autoSizeTextType="uniform"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imageViewUserKeypadWhiteCoin"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/placeholder"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimaryLight"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageViewUserKeypadWhiteCoin"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageViewUserKeypadJayuLogo"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonUserKeypadOptionsMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:icon="@drawable/ic_menu"
            app:iconSize="35dp"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewUserKeypadJayuLogo"
            app:layout_constraintStart_toEndOf="@+id/imageViewUserKeypadJayuLogo" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    Right container-->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="30dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineUserKeypadContainerSplit"
        app:layout_constraintTop_toTopOf="parent">

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/layoutUserKeypadContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:blurOverlayColor="#40E3E3F4">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutUserKeypadRightContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccpUserKeypadPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:visibility="gone"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_countryPreference="US,KR"
                    app:layout_constraintBottom_toTopOf="@id/constraintLayoutUserKeypadKeypadButtons"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textViewUserKeypadPhoneNumberComment"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="center"
                    android:text="Enter your phone number to claim exclusive rewards."
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toTopOf="@id/editTextUserKeypadInput"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!--                <ImageView-->
                <!--                    android:id="@+id/textViewUserKeypadPhoneNumberComment"-->
                <!--                    android:layout_width="100dp"-->
                <!--                    android:layout_height="60dp"-->
                <!--                    android:layout_marginStart="30dp"-->
                <!--                    android:layout_marginTop="20dp"-->
                <!--                    android:layout_marginEnd="30dp"-->
                <!--                    app:layout_constraintBottom_toTopOf="@id/editTextUserKeypadInput"-->
                <!--                    app:layout_constraintEnd_toEndOf="parent"-->
                <!--                    app:layout_constraintStart_toStartOf="parent"-->
                <!--                    app:layout_constraintTop_toTopOf="parent"-->
                <!--                    app:srcCompat="@drawable/logo_white" />-->

                <EditText
                    android:id="@+id/editTextUserKeypadInput"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="@string/enter_otp"
                    android:inputType="phone"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="40sp"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayoutUserKeypadKeypadButtons"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewUserKeypadPhoneNumberComment" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineUserKeypadKeys"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintGuide_percent="0.33"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutUserKeypadKeypadButtons"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/colorPrimaryLight"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/guidelineUserKeypadKeys">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="20dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:id="@+id/linearLayoutUserKeypadKeyRow1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="1"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="2"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="3"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutUserKeypadKeyRow2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="4"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="5"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="6"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutUserKeypadKeyRow3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey7"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="7"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey8"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="8"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey9"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="9"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutUserKeypadKeyRow4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonUserKeypadKey0"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:text="0"
                                android:textColor="@color/colorGray"
                                app:autoSizeTextType="uniform" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/deleteButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.1"
                                android:backgroundTint="@color/white"
                                app:icon="@drawable/ic_delete"
                                app:iconGravity="textStart"
                                app:iconPadding="10dp"
                                app:iconSize="40dp"
                                app:iconTint="@color/colorGray" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/enterButton"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/soleil_bold"
                            android:text="Submit"
                            android:textSize="20sp" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </eightbitlab.com.blurview.BlurView>

    </androidx.cardview.widget.CardView>

    <!-- Give points response-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutUserKeypadPointSuccessScreen"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:background="@drawable/bg_rounded_corners_white"
        android:elevation="1dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineUserKeypadContainerSplit">

        <TextView
            android:id="@+id/textUserKeypadPtsResponseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/soleil_bold"
            android:text="Hello"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewUserKeypadProfilePicture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/default_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textUserKeypadPtsResponseName" />

        <TextView
            android:id="@+id/textUserKeypadPtResponseHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/soleil_bold"
            android:gravity="center"
            android:text="99999 points"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewUserKeypadProfilePicture" />

        <TextView
            android:id="@+id/textUserKeypadPtsResponseDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:text="You just got 5 points from Go Get Yogurt and now have 45 points for rewards."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textUserKeypadPtResponseHeader" />

        <TextView
            android:id="@+id/textUserKeypadPtsResponseMoreInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="96dp"
            android:text="You also have $5.00 available for gift cards you can redeem in the Jayu app."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@id/buttonUserKeypadBackButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textUserKeypadPtsResponseDesc" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonUserKeypadBackButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="25dp"
            android:text="OK"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    Options menu-->
    <LinearLayout
        android:id="@+id/linearLayoutUserKeypadOptionsMenu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_rounded_corners_white"
        android:elevation="3dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textUserKeypadOptionsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/soleil_book"
            android:text="@string/company" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonUserKeypadLockScreen"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/soleil_bold"
            android:text="@string/lock_screen"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorGray"
            app:icon="@drawable/ic_lock"
            app:iconPadding="15dp"
            app:iconTint="@color/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonUserKeypadUpdatePoints"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/soleil_bold"
            android:text="@string/update_points"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorGray"
            app:icon="@drawable/ic_edit_2"
            app:iconPadding="15dp"
            app:iconTint="@color/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonUserKeypadSwitchToEmployeeAccount"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
