<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="false"
    tools:context=".screens.popups.UpdatePointsPopup">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textPopupUpdatePtsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/soleil_bold"
            android:gravity="center"
            android:text="@string/header"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textPopupUpdatePtsDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:text="Change the amount of points to give to the next customer. This will reset back to the default amount afterwards. Use the web portal to change the default amount of points to give."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/textPopupUpdatePtsHeader" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputPopupUpdatePtsAmount"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textPopupUpdatePtsDesc">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextGivePointsAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of points"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="13"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textUpdatePtsPopupTimeoutDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:text="Turning off point timeout will allow customers to get points back to back. Turning this on will make customers wait your default timeout before they can get another point."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/textInputPopupUpdatePtsAmount" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchUpdatePtsPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/soleil_bold"
            android:text="Activate timeout"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textUpdatePtsPopupTimeoutDesc" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonGivePointsSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/soleil_bold"
            android:padding="8dp"
            android:stateListAnimator="@null"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switchUpdatePtsPopup" />

        <include
            android:id="@+id/spinnerPopupUpdatePoints"
            layout="@layout/view_spinner_default" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>