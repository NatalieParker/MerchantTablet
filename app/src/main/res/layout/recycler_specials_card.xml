<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewRecyclerSpecialsSpecialsCard"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutRecyclerSpecialsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/purple_card"
        android:alpha="1">

        <ImageView
            android:id="@+id/imageViewRecyclerSpecialsIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_gift"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textViewRecyclerSpecialsPointsText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/soleil_bold"
            android:text="Pts"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/textViewRecyclerSpecialsCardText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewRecyclerSpecialsPointsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="10dp"
            android:text="@string/placeholder"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>