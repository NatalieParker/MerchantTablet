<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="12dp"
    android:backgroundTint="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewUserKeypadViewPagerTryJayuWith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="TRY JAYU WITH"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/textViewUserKeypadViewPagerRewardsMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$10"
            android:textColor="@color/white"
            android:fontFamily="@font/soleil_bold"
            android:textSize="150dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textViewUserKeypadViewPagerTryJayuWith"/>

        <TextView
            android:id="@+id/textViewUserKeypadViewPagerRewardsCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREDIT"
            android:textColor="@color/white"
            android:fontFamily="@font/soleil_bold"
            android:textSize="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textViewUserKeypadViewPagerRewardsMoney"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>